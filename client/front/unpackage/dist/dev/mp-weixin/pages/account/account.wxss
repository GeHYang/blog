.account .main {
  height: calc(100vh - 51px);
}
.account .main .top-info {
  box-sizing: border-box;
  overflow: hidden;
  width: 100%;
  height: 40%;
  background-color: #417ee2;
  padding: 0 20px;
}
.account .main .top-info .info {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  padding: 30px 0;
}
.account .main .top-info .info .avatar {
  overflow: hidden;
  width: 80px;
  height: 80px;
  display: flex;
  align-items: center;
}
.account .main .top-info .info .avatar image {
  width: 70px;
  height: 70px;
  border: 3px groove;
  border-radius: 50%;
}
.account .main .top-info .info .name {
  box-sizing: border-box;
  width: calc(100% - 80px - 40px);
  padding: 0 10px;
  color: white;
}
.account .main .top-info .info .name .username,
.account .main .top-info .info .name .userId {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.account .main .top-info .info .name .username {
  font-size: 18px;
  line-height: 35px;
}
.account .main .top-info .info .name .userId {
  font-size: 12px;
}
.account .main .top-info .count {
  display: flex;
  justify-content: space-around;
  color: white;
  text-align: center;
}
.account .main .top-info .count view .num {
  font-weight: 600;
  line-height: 20px;
}
.account .main .top-info .count view text {
  font-size: 12px;
}
.account .main .user-info {
  overflow: hidden;
  box-sizing: border-box;
  -webkit-transform: translateY(-50px);
          transform: translateY(-50px);
  padding: 20px;
  height: calc(100% - 40% + 50px);
  background-color: #fff;
  border-radius: 50px 50px 0 0;
}

